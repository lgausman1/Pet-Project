<%= render partial: "layouts/navbar2", locals: {user: @user} %>

<div class="row" style="margin-top: 200px;">
	<div class="col-md-12">
	<% @pets.each do |pet| %>
		<% if pet.thumbnail == nil %>
			<div style="display: none;"><%= pet.species %></div>
		
		<% else %>
			<div class="col-md-3 text-center">
				<%= link_to image_tag(pet.thumbnail), pet_path(pet.id), class: "img img-thumbnail" %>

				<p><%= link_to pet.name, pet_path(pet.id) %> </p>
			</div>
		
		<% end %>
	<% end %>

	</div>
</div>

