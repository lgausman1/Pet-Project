<div class="container">
<ul class="row">
<% @pets.each do |pet| %>
	<% if pet.thumbnail == nil %>
	<%= pet.species %>
	
	<% else %>
	<li class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
	<img src="<%= pet.thumbnail %>", class="img-responsive img-thumbnail">
	<% end %>
	<%= link_to pet.name, pet.link %> 
	</li>
	<br>
	</ul>
<% end %>

</div>