<div class="row">
	<h1>Meet Our Pets</h1>
	<div class="col-md-12">
	<div class="container-fluid">
	<% @pets.each do |pet| %>

			<div class="col-md-3 text-center">
				<%= link_to image_tag(pet.thumbnail), pet_path(pet.id), class: "img img-thumbnail" %>

				<p><%= link_to pet.name, pet_path(pet.id) %> </p>
			</div>
		

	<% end %>
	</div>
	</div>
</div>

