<%= render partial: "layouts/header" %>
<div class="row">
	<div class="col-md-12">
	<% @pets.each do |pet| %>
		<% if pet.thumbnail == nil %>
			<div style="display: none;"><%= pet.species %></div>
		
		<% else %>
			<div class="col-md-3 text-center">
				<img src="<%= pet.thumbnail %>" width="220" height="220">
				<p><%= link_to pet.name, pet.link %> </p>
			</div>
		
		<% end %>
	<% end %>
	</div>
</div>
