<h1 class="pet-name"><%= @pet.name %></h1> <br>
<div class="pet-pic"><img class="pet-pic" src="<%= @pet.thumbnail %>", class="img-rounded"></div>
<% years = @pet.age / 12 %>
<% months = @pet.age - (years * 12) %>
<% age = "#{years} years and #{months} months old" %>
<% pounds = @pet.weight / 12 %>
<% oz = @pet.weight - (pounds * 16) %>
<% weight = "#{pounds}lb and #{oz}oz" %>
<div class="pet-attributes"> Age: <%= age %> </div>
<div class="pet-attributes"> Sex: <%= @pet.gender %></div>
<div class="pet-attributes"> Weight: <%= weight %></div> <br>
<div class="pet-description-container"><p class="pet-description"> <%= @pet.description %> </p></div>

<div class="pet-attributes">Find me at <%= link_to @pet.name, "https://www.sfspca.org/adoptions/pet-details/#{@pet.shelter_id}" %> </div>