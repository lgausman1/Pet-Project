<!-- Modal -->
<div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="myModal" role="dialog" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Register</h4>
      </div>
      <div class="modal-body">
        <div id="signDiv" style="display: block;">

          <%= bootstrap_form_for :user, url: "/users", method: "post" do |f| %>
          <div class="form-group has-error">
            <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", help: "Required field" %>
          </div>
          <div class="form-group has-error">
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", help: "Required field" %>
          </div>
          <div class="form-group has-error">
            <%= f.email_field :email, class: "form-control", placeholder: "Email", help: "Required field" %>
          </div>
          <div class="form-group has-error">
            <%= f.password_field :password, class: "form-control", placeholder: "Password", help: "Required field" %>
          </div>
          <div class="form-group">
            <%= f.submit "Register", class: "btn btn-success" %>
            <button aria-pressed="false" autocomplete="off" class="btn btn-primary pull-right" data-toggle="button" id="formToggle" onclick="petmatch.memberSignIn()" type="button">Returning? Sign In</button>
          </div>
          <% end %>

        </div>
        <div id="logDiv" style="display: none;">

          <%= bootstrap_form_for :user, url: "/sessions", method: "post" do |f| %>

          <div class="form-group has-error">
            
            <%= f.text_field :email, class: "form-control", placeholder: "Email", help: "Required field" %>
          </div>
          <div class="form-group has-error">
            
            <%= f.password_field :password, class: "form-control", placeholder: "Password", help: "Required field" %>
          </div>
          <div class="form-group">
            <%= f.submit "Sign In", class: "btn btn-success" %>
            <button aria-pressed="false" autocomplete="off" class="btn btn-primary pull-right" data-toggle="button" id="formToggle2" onclick="petmatch.memberRegister()" type="button">New? Register Now</button>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
